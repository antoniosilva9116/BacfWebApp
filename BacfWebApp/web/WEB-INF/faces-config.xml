<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>/resources/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
        <factory>
            <exception-handler-factory>ViewsHandler.ViewExpiredExceptionExceptionHandlerFactory</exception-handler-factory>
        </factory>
    </application>    
    <managed-bean>
        <managed-bean-name>UtilizadorController</managed-bean-name>
        <managed-bean-class>Persistence.Entities.Controllers.UtilizadorController</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>      
    </managed-bean>
    <managed-bean>
        <managed-bean-name>CampanhaController</managed-bean-name>
        <managed-bean-class>Persistence.Entities.Controllers.CampanhaController</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>      
    </managed-bean>
    <navigation-rule>
        <navigation-case>
            <from-outcome>chefeequipa</from-outcome>
            <to-view-id>chefeequipa/chefeequipa.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>chefeequipa</from-action>
            <to-view-id>chefeequipa/chefeequipa.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>administrador</from-outcome>
            <to-view-id>administrator/administrator.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>administrador</from-action>
            <to-view-id>administrator/administrator.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>voluntario</from-outcome>
            <to-view-id>voluntario/voluntario.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>voluntario</from-action>>
            <to-view-id>voluntario/voluntario.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>signin</from-outcome>
            <to-view-id>account/signin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>/home.xhtml</to-view-id>            
        </navigation-case>
        <navigation-case>
            <from-outcome>app-main</from-outcome>
            <to-view-id>/home.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>
